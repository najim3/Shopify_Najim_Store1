<div class="flex flex-col items-center my-8">
  {% if section.settings.title != blank %}
    <h1 class="text-3xl font-medium my-8 md:my-16">{{ section.settings.title }}</h1>
  {% endif %}
  {% form 'contact' %}
    {% if form.errors %}
      <div class="border p-5">
        <div class="flex flex-items-center w-full my-3">
          <div class="text-red-500">
            {% render 'icon-failed' %}
          </div>
          <div class="text-sm font-medium ml-3">Oh no! Your message was not sent</div>
        </div>
        <ul class="px-4 mb-3 ml-7 list-decimal">
          {% for error in form.errors %}
            <li>
              <span>{{ form.errors.messages[error] }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full my-3 p-5">
        <div class="text-green-500">
          {% render 'icon-success' %}
        </div>
        <div class="text-sm font-medium ml-3">Your message was sent successfully</div>
      </div>
    {% endif %}
    <div class="max-w-6xl mx-auto flex-1 items-center justify-center flex-col px-4">
      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-sm text-gray-500 font-medium" for="contact_name">Name</label>
          <input class="border border-gray-300 rounded w-full p-2" type="text" name="contact[name]" id="contact_name">
        </div>
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-sm text-gray-500 font-medium" for="contact_email">Email</label>
          <input
            class="border border-gray-300 rounded w-full p-2"
            type="email"
            name="contact[email]"
            id="contact_email"
          >
        </div>
      </div>

      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <label class="uppercase text-sm text-gray-500 font-medium" for="contact_message">Message</label>
          <textarea
            class="border border-gray-300 rounded w-full p-2"
            name="contact[body]"
            id="contact_message"
          ></textarea>
        </div>
      </div>

      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <input
            class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700 rounded"
            type="submit"
            value="Submit message"
          >
        </div>
      </div>
    </div>
  {% endform %}
</div>

{% schema %}
{
  "name": "Contact form",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Contact form"
    }
  ]
}
{% endschema %}
