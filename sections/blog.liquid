{% comment %}
  This section is used in the blog template to render the blog page listing all
  articles within a blog.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/blog
{% endcomment %}

<div class="py-8">
  {% paginate blog.articles by section.settings.number_of_blog_posts %}
    <h1 class="text-center text-3xl">{{ blog.title }}</h1>

    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% for article in blog.articles %}
          <div class="w-full py-6 px-3">
            <div class="bg-white shadow-xl rounded-lg overflow-hidden">
              {% if article.image %}
                <a href="{{ article.url }}">
                  {{
                    article.image
                    | image_url: width: 500, height: 300
                    | image_tag: class: 'w-full h-80 object-cover'
                  }}
                </a>

              {% else %}
                {{ 'image' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
              {% endif %}

              <div class="p-4">
                <h1 class="text-xl font-medium my-4">
                  {{ article.title | link_to: article.url }}
                </h1>
                {% if article.excerpt.size > 0 %}
                  <p>{{ article.excerpt | strip_html | truncatewords: 15 }}</p>
                {% else %}
                  <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
                {% endif %}
                <a href="{{ article.url }}" class="text-blue-500 font-medium hover:text-blue-700 my-4 block">
                  {{- section.settings.blog_read_more_text -}}
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="max-w-6xl mx-auto">
      {% render 'pagination', pagination: paginate %}
    </div>
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "t:general.blog",
  "settings": [
    {
      "type": "text",
      "id": "blog_read_more_text",
      "label": "Read more text",
      "default": "Read more"
    },
    {
      "type": "range",
      "id": "number_of_blog_posts",
      "label": "Blog posts per page",
      "default": 3,
      "min": 1,
      "max": 6,
      "step": 1
    }
  ]
}
{% endschema %}
