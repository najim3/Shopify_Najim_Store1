<div class="flex flex-col items-center justify-center my-8 mx-10">
  <h1 class="text-3xl font-medium">{{ section.settings.title }}</h1>

  <div class="max-w-6xl max-auto my-3">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {% for collection in collections %}
        {% if collection.all_products_count > 0 %}
          <div class="w-full py-6">
            <div class="border bg-white overflow-hidden">
              <a href="{{ collection.url }}">
                <div class="h-80 overflow-hidden">
                  {% if collection.featured_image != blank %}
                    {% assign collection_image = collection.featured_image %}
                  {% else %}
                    {% assign collection_image = collection.products.first.image %}
                  {% endif %}
                  {{
                    collection_image
                    | image_url: width: 200
                    | image_tag:
                      class: 'w-full h-full object-cover transition duration-300 ease-in-out transform hover:scale-105'
                  }}
                </div>
              </a>
              <div class="p-4 bg-gray-100">
                <h1 class="text-xl">{{ collection.title }}</h1>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "List of collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Collections"
    }
  ]
}
{% endschema %}
