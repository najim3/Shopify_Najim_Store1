{% case media.media_type %}
  {% when 'image' %}
    {{
      media
      | image_url: width: 1000
      | image_tag: loading: 'lazy', class: 'w-full h-full object-cover', alt: media.alt
    }}

  {% when 'external_video' %}
    {{
      media
      | external_video_tag: autoplay: true, preload: 'none', class: 'w-full h-full object-cover', loading: 'lazy'
    }}

  {% when 'video' %}
    {{
      media
      | video_tag: autoplay: true, preload: 'none', class: 'w-full h-full object-cover', loading: 'lazy', controls: true
    }}

  {% when 'model' %}
    {{ media | model_viewer_tag }}

  {% else %}
    {{ media | media_tag }}
{% endcase %}
